<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:id="@+id/root" >

    <TextView
        android:id="@+id/tv_position_name"
        style="@style/text.small"
        android:text="@string/position_name" />

    <EditText
        android:id="@+id/edt_position_name"
        style="@style/edit_text.singleline"
        android:ems="10" 
        android:hint="@string/position_enter_name"
        android:singleLine="true">

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/tv_position_description"
        style="@style/text.small"
        android:text="@string/position_description" />

    <EditText
        android:id="@+id/edt_position_description"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:ems="10"
        android:gravity="top|left"
        android:hint="@string/position_enter_description"
        android:inputType="textMultiLine" />

</LinearLayout>