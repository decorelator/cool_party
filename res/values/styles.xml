<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- TEXT VIEW -->
	<style name="text" >
	    <item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
   
	<!-- TEXT -->
	<style name="text_size" >
	</style>
	
	<style name="text_size.title" >
	    <item name="android:textSize">14sp</item>
	</style>
	<style name="text_size.description" >
	    <item name="android:textSize">12sp</item>
	    <item name="android:textColor">#848484</item>
	</style>
	<!-- COLOR -->
	<style name="main_blue">
	    <item name="android:background">@color/mane_blue</item>
	</style>
	<style name="main_orange">
	    <item name="android:background">@color/mane_orange</item>
	</style>
	
	
</resources>
